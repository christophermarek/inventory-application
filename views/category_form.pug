extends layout

block content
  h1= title

  form(method='POST' action='')
    div.form-group
      label(for='name') Name:
      input#title.form-control(type='text', placeholder='Name of Category' name='name' required='true')
    div.form-group
      label(for='description') Description:
      textarea#summary.form-control(type='textarea', placeholder='Description' name='description' rows='3' required='true')
    button.btn.btn-primary(type='submit') Submit

  if errors 
    ul
      for error in errors
        li!= error.msg